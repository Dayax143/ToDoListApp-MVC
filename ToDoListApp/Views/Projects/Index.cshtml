                            </div>
                            <div class="col">
                                <h5 class="py-0 my-0">
                                    <a class="text-dark nav-link mx-0 px-0" asp-action="Details" asp-route-id="@project.Id">@project.Name</a>
                                </h5>
                                <small class="small bg-dark rounded text-white px-1">@project.CreatedDate.ToShortDateString()</small>
                                <br />
                                <span>@project.Description</span>
                            </div>
                        </div>
