@model IEnumerable<ToDoListApp.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="d-flex justify-content-between">

        <h4>Projects</h4>

        <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">Add New Project</a>
    </div>
</div>
<br />
<br />
